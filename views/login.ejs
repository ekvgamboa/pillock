<! DOCTYPE html>

<html lang = "en">
<head>
    <script type = "text/javascript" src = "layout.ejs"></script>
    <meta charset = "UTF-8">
	<meta name = "viewport" content = "width=device-width,intial-scale=1.0">
	<link href = "/stylesheets/main.css" rel = "stylesheet">
	<title>Pillock - Log In</title>
</head>

<body class = "full-height-grow">

    <%- include('../views/partials/header.ejs') %>
   
    <div class = "container full-height-grow">
		<section class = "main-section">
            <div class = "left">
                <h1>Log In</h1>
            </div>
		    <% if (messages.error) { %>
				<%= messages.error %>
		    <% } %>
            <form class="join-form" action = "/login" method = "POST">
                <div class="input-group">
                    <label for = "email">Email:</label>
                    <input type=text id = "email" name = "email" autofocus required>
                </div>
                <div class="input-group">
                    <label for = "password">Password:</label>
                    <input type="password" id = "password" name = "password" required>
                </div>
                <div class="input-group">
                    <button type = "submit" class="btn">Log In</button>
                </div>
                <div class = "input-group">
                    <a href = "/Change-Password" class = "forgot">Forgot Password?</a>
                </div>
            </form>
		</section>
	</div>

    <%- include('../views/partials/footer.ejs') %>
</body>
</html>